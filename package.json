{
  "name": "webext-feedback-popup",
  "version": "1.0.1",
  "description": "Timed Popup to gain store feedback & ratings from user",
  "author": "Nikola Kretschmer <me@nkretschmer.com>",
  "repository": "https://github.com/nikoisonfire/webext-feedback-popup",
  "license": "MIT",
  "keywords": [
    "web extension",
    "browser extension",
    "chrome extension",
    "extension modal",
    "extension rating modal",
    "web extension get user feedback",
    "web extension get user ratings",
    "chrome web store get ratings",
    "firefox addons get ratings"
  ],
  "main": "./dist/tsc/index.js",
  "types": "./dist/tsc/index.d.ts",
  "scripts": {
    "cli": "ts-node src/cli.ts",
    "copy-assets": "cpx 'src/**/*.{html,png,jpg}' dist/tsc --watch",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "clean": "rm -rf dist build package",
    "ts-node": "ts-node",
    "docs": "typedoc --entryPoints src/main.ts",
    "build": "tsc -w -p tsconfig.json && copy-assets",
    "build-all": "yarn clean && yarn build && yarn esbuild-node && yarn esbuild-browser",
    "esbuild-browser": "esbuild src/browser.ts --bundle --minify --sourcemap=external --outfile=dist/esbuild/browser.js",
    "esbuild-browser:dev": "esbuild src/browser.ts --bundle --outfile=dist/esbuild/browser.js",
    "esbuild-browser:watch": "esbuild src/browser.ts --bundle --watch --outfile=dist/esbuild/browser.js",
    "esbuild-node": "esbuild src/cli.ts --bundle --platform=node --minify --sourcemap=external --outfile=dist/esbuild/cli.js",
    "esbuild-node:dev": "esbuild src/cli.ts --bundle --sourcemap=external --outfile=dist/esbuild/cli.js",
    "esbuild-node:watch": "esbuild src/cli.ts --bundle --watch --sourcemap=external --outfile=dist/esbuild/cli.js"
  },
  "devDependencies": {
    "@types/jest": "^26.0.21",
    "@types/node": "^15.0.1",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "cpx": "^1.5.0",
    "esbuild": "^0.11.11",
    "eslint": "^7.22.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.35",
    "typescript": "^4.2.3",
    "webextension-polyfill-ts": "^0.26.0"
  }
}
